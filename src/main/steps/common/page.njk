  {% include "./webpack/css.njk" %}
  <!-- {{ userCase.id }} -->
{% endblock %}
{% block bodyStart %}
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KJ99Q2D5"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) --> 
{% endblock %}

{% block header %}
  {% include "../cookie-banner/template.njk" %}
  {{ govukHeader({
    containerClasses: "govuk-width-container",
    serviceName: serviceName,
    serviceUrl: (globals.basePath if globals.basePath) + "/",
    navigation: [
      {
        href: "/logout" if isLoggedIn else "/",
        text: signOut if isLoggedIn else signIn
      }
    ]
  }) }}
{% endblock %}

{% block pageTitle %}
  {{ serviceName }} - {{ title }} - {{ govUk }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: phase
    },
    html: feedback + languageToggle
  }) }}
  {% block backLink %}
    <a href="#" class="govuk-back-link">{{ back }}</a>
  {% endblock %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% block error_summary %}
        {% include "common/error/summary.njk" %}
      {% endblock %}

      {% block page_content%}
        {% if title %}
          <h1 class="govuk-heading-l govuk-!-margin-bottom-2">{{ title }}</h1>
        {% endif %}
      {% endblock %}
      
      {% if form %}
        {% block form %}
          {% include "common/form/form.njk"%}
        {% endblock %}
      {% endif %}

      {# TODO uncomment this once we have contact us content #}
      {# {% block contact_us %}
        {% include "./contact-us.njk" %}
      {% endblock %} #}
    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "/cookies",
          text: cookies
        },
        {
          href: "/privacy-policy",
          text: privacyPolicy
        },
        {
          href: "/accessibility-statement",
          text: accessibility
        },
        {
          href: "/terms-and-conditions",
          text: termsAndConditions
        },
        {
          href: "/contact-us",
          text: contactUs
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "./webpack/js.njk" %}
{% endblock %}
